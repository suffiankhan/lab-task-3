#include <iostream>
using namespace std;
struct Node{int v; Node* next; Node(int x):v(x),next(nullptr){}};
Node* build(int a[], int n){Node* h=nullptr; Node* t=nullptr; for(int i=0;i<n;i++){Node* p=new Node(a[i]); if(!h) h=t=p; else {t->next=p; t=p;}} return h;}
void printList(Node* h){Node* p=h; while(p){cout<<p->v; if(p->next) cout<<" "; p=p->next;} cout<<"\n";}
Node* rotate(Node* head,int k){
    if(!head||k==0) return head;
    Node* tail=head; int len=1;
    while(tail->next){ tail=tail->next; len++; }
    k=k%len;
    if(k==0) return head;
    Node* cur=head; for(int i=1;i<k;i++) cur=cur->next;
    Node* newHead=cur->next;
    cur->next=nullptr;
    tail->next=head;
    return newHead;
}
int main(){
    int arr[]={5,3,1,8,6,4,2};
    Node* head=build(arr,7);
    cout<<"Given list: ";
    printList(head);
    int k;
    cout<<"Enter the number: ";
    cin>>k;
    head=rotate(head,k);
    cout<<"After rotation: ";
    printList(head);
    return 0;
}
